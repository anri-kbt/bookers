<h1>Books</h1>
<%@books.each do |book|%>-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=book.title%></td>
      <td><%=book.body%></td>
      <td>
        <%=link_to 'Show',book_path(book.id)%>
      </td>
      <td>
        <%=link_to 'Edit',edit_book_path(book.id)%>
      </td>
      <td>
        <%=link_to 'Destroy',book_path(book.id)%>
      </td>
    </tr>
  </tbody>
</table>
<%end%>

<h2>New book</h2>
<%=form_with model: @book,url:'/books',method: :post do |f|%>
 <div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>

  <label for="bool_body">Body</label>
  <%=f.text_area :body %>

  <%= f.submit "Create Book"%>
 </div>
<%end%>

